Log Details displayed at <%= Time.zone.now.to_s %><br/>
<% read_file(@log_file).each do |rl| %>
	<div>
		<% lines = rl.split("\n") %>
		<a href="#" class="log" style="<%= "color:red;" if rl.index("Error").present? %>"><%= lines.shift %></a><br/>
		<div style="display:none;">
			<pre class="well"><%= print_line(lines.join("\n")) %></pre>
		</div>
	</div>
<% end %>
<script>
	$(document).ready(function(){
		$(".log").each(function(){
			$(this).click(function(event){
				$(this).closest('div').find('div').toggle();
				event.preventDefault();
			});
		});
	});
</script>